@model IEnumerable<SistemaCobros.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contrasena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rol.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contrasena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rol.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_usuario }) |
   
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_usuario })
        </td>
    </tr>
}

</table>
