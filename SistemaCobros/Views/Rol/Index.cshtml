@model IEnumerable<SistemaCobros.Models.Rol>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Crear Rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Rol
        </th>
        
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Estado.descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_rol }) |
          
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_rol })
        </td>
    </tr>
}

</table>
